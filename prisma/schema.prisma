// prisma/schema.prisma
// OnlyZines Database Schema - Phase 7

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// USER & AUTH
// ============================================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  displayName   String?   @map("display_name")
  avatarUrl     String?   @map("avatar_url")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  publisher     Publisher?
  refreshTokens RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  expiresAt DateTime  @map("expires_at")
  createdAt DateTime  @default(now()) @map("created_at")
  revokedAt DateTime? @map("revoked_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

// ============================================================================
// PUBLISHER
// ============================================================================

model Publisher {
  id          String   @id @default(cuid())
  userId      String   @unique @map("user_id")
  handle      String   @unique
  displayName String   @map("display_name")
  bio         String?
  avatarUrl   String?  @map("avatar_url")
  websiteUrl  String?  @map("website_url")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  zines Zine[]

  @@map("publishers")
}

// ============================================================================
// ZINE & ISSUES
// ============================================================================

model Zine {
  id           String     @id @default(cuid())
  publisherId  String     @map("publisher_id")
  slug         String
  title        String
  description  String?
  coverImageUrl String?   @map("cover_image_url")
  visibility   Visibility @default(UNLISTED)
  accessType   AccessType @default(OPEN)
  passwordHash String?    @map("password_hash")
  issueCount   Int        @default(0) @map("issue_count")
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  publisher Publisher @relation(fields: [publisherId], references: [id], onDelete: Cascade)
  issues    Issue[]

  @@unique([publisherId, slug])
  @@index([publisherId])
  @@index([visibility])
  @@map("zines")
}

model Issue {
  id                String    @id @default(cuid())
  zineId            String    @map("zine_id")
  issueNumber       Int       @map("issue_number")
  title             String
  description       String?
  coverImageUrl     String?   @map("cover_image_url")
  pageCount         Int       @default(0) @map("page_count")
  spreadCount       Int       @default(0) @map("spread_count")
  readingDirection  ReadingDirection @default(LTR) @map("reading_direction")
  publishedAt       DateTime? @map("published_at")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  zine    Zine     @relation(fields: [zineId], references: [id], onDelete: Cascade)
  pages   Page[]
  spreads Spread[]

  @@unique([zineId, issueNumber])
  @@index([zineId])
  @@index([publishedAt])
  @@map("issues")
}

// ============================================================================
// PAGES & BLOCKS
// ============================================================================

model Page {
  id                   String   @id @default(cuid())
  issueId              String   @map("issue_id")
  pageNumber           Int      @map("page_number")
  canvasWidth          Int      @default(900) @map("canvas_width")
  canvasHeight         Int      @default(1200) @map("canvas_height")
  backgroundColor      String?  @map("background_color")
  metadata             Json?
  renderedImageUrl     String?  @map("rendered_image_url")
  renderedThumbnailUrl String?  @map("rendered_thumbnail_url")
  blurhash             String?
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  issue       Issue    @relation(fields: [issueId], references: [id], onDelete: Cascade)
  blocks      Block[]
  leftSpread  Spread?  @relation("LeftPage")
  rightSpread Spread?  @relation("RightPage")

  @@unique([issueId, pageNumber])
  @@index([issueId])
  @@map("pages")
}

model Block {
  id        String   @id @default(cuid())
  pageId    String   @map("page_id")
  blockType String   @map("block_type")
  positionX Float    @map("position_x")
  positionY Float    @map("position_y")
  width     Float
  height    Float
  rotation  Float    @default(0)
  zIndex    Int      @default(0) @map("z_index")
  data      Json
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@index([pageId])
  @@map("blocks")
}

// ============================================================================
// SPREADS
// ============================================================================

model Spread {
  id           String  @id @default(cuid())
  issueId      String  @map("issue_id")
  spreadNumber Int     @map("spread_number")
  leftPageId   String? @unique @map("left_page_id")
  rightPageId  String? @unique @map("right_page_id")

  issue     Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)
  leftPage  Page? @relation("LeftPage", fields: [leftPageId], references: [id])
  rightPage Page? @relation("RightPage", fields: [rightPageId], references: [id])

  @@unique([issueId, spreadNumber])
  @@index([issueId])
  @@map("spreads")
}

// ============================================================================
// ENUMS
// ============================================================================

enum Visibility {
  PUBLIC
  UNLISTED
  PASSWORD
}

enum AccessType {
  OPEN
  PASSWORD
}

enum ReadingDirection {
  LTR
  RTL
}
